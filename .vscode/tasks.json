{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run ModelSim",
            "type": "shell",
            "command": "cd ${workspaceFolder}/config; source cfgpath",
            "presentation": {
                "panel": "shared",
                "reveal": "never"
            },
        },
        {
            "label": "Compile HDL",
            "type": "shell",
            "command": "${workspaceFolder}/config/comp_hdl.sh",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "problemMatcher": [
                {
                    "fileLocation": [
                        "relative",
                        "."
                    ],
                    "pattern": {
                        "regexp": "\\*\\* (Error):.* (\\/.*.sv)\\((\\d*)\\).?\\s(?:\\(.*\\))*(.*)",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "message": 4
                    }
                }
            ]
        },
        {
            "label": "Compile BENCH",
            "type": "shell",
            "command": "${workspaceFolder}/config/comp_bench.sh",
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "problemMatcher": [
                {
                    "fileLocation": [
                        "relative",
                        "."
                    ],
                    "pattern": {
                        "regexp": "\\*\\* (Error):.* (\\/.*.sv)\\((\\d*)\\).?\\s(?:\\(.*\\))*(.*)",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "message": 4
                    }
                }
            ]
        }
    ]
}